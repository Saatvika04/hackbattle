{
    "manifest_version": 3,
    "name": "FocusTracker - Productivity & Time Management",
    "version": "1.0.0",
    "description": "Track your focus score, visualize time allocation, and get weekly productivity reports.",
    "permissions": [
      "activeTab",
      "storage",
      "alarms",
      "tabs",
      "notifications"
    ],
    "host_permissions": [
      "<all_urls>"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["<all_urls>"],
        "js": ["content.js"]
      }
    ],
    "action": {
      "default_popup": "popup.html",
      "default_title": "FocusTracker"
    },
    "options_page": "options.html",
    "web_accessible_resources": [
      {
        "resources": ["*.js", "*.css"],
        "matches": ["<all_urls>"]
      }
    ]
  }
